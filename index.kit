<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="chrome=1">
        <title>Gracepoint Design</title>

        <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
        <link rel="stylesheet" href="website/css/styles.css">
        <!-- todo: create a "master" js file -->
        <script src="website/js/vue.js"></script>
        <script src="website/js/vue-router.js"></script>
        <script src="website/js/moment.min.js"></script>
        <script src="website/js/underscore-min.js"></script>
        <meta name="viewport" content="width=device-width">

    </head>
    
    <body>
        <div id="app">
            <router-view></router-view>
        </div> <!-- /#app -->

        <!-- DESIGN PAGE TEMPLATE -->
        <!-- TODO: need to account for Page Not Found -->
        <template id="design-page">
            <section class="page">
                <header>
                    
                </header>
                <div class="container">
                    <h2>{{ current.title }}</h2>
                    <img class="hero" :src="getThumb()">
                    <aside>
                        <a class="button" :href="getGithubUrl()">View Project on Github</a>
                    </aside>
                    <div class="main">
                        <p v-if="current.designer">by {{ current.designer }}</p>
                        <p>{{ current.description }}</p>
                    </div>

                </div>
            </section>
        </template> <!-- /#design-page -->

        <!-- DASHBOARD TEMPLATE -->

        <template id="dashboard">
            <section class="dashboard">
                <header>
                    
                </header>
                <div class="container" >
                    <design-card v-for="design in designs" :design="design"></design-card>
                </div>
            </section>
        </template> <!-- /#dashboard -->

        <template id="design-card">
            <router-link :to="{path: getPageUrl()}" class="card">
                <img width="360" height="270" :src="getThumb()">
                <div class="info">
                    {{ design.title }}<br>
                    {{ getDate() }}
                </div>
            </router-link>
        </template> <!-- /#design-card -->
    </body>

    <script src="website/js/app.js"></script>
</html>
