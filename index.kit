<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="chrome=1">
        <title>Gracepoint Design</title>

        <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
        <link rel="stylesheet" href="website/css/styles.css">
        <!-- todo: create a "master" js file -->
        <script src="website/js/vue.js"></script>
        <script src="website/js/vue-router.js"></script>
        <script src="website/js/moment.min.js"></script>
        <meta name="viewport" content="width=device-width">

    </head>
    
    <body>
        <div id="app">
            <router-link to="/">Go to Dash</router-link>
            <router-link to="/design">Go to Design</router-link>
            <router-view></router-view>
        </div> <!-- /#app -->

        <template id="test" :designs="designs">
            <div>
                This is test template for DASHBOARD {{designs}}
            </div>
        </template>

        <template id="dashboard">
            <section>
                <header>
                    
                </header>
                <div class="container" >
                    <design-card v-for="design in designs" :design="design"></design-card>
                </div>
            </section>
        </template>

        <template id="design-card">
            <router-link to="/design" class="card">
                <img width="360" height="270" :src="getThumb()">
                <div class="info">
                    {{ design.title }}<br>
                    {{ getDate() }}
                </div>
            </router-link>
        </template>
    </body>

    <script src="website/js/app.js"></script>
</html>
